{
	"name": "Duolingo Average XP",
	"description": "Shows the average XP of the current league on the Leaderboard page.",
	"version": "1.0",
	"manifest_version": 3,
	"actio": {
		"default_popup": "hello.html",
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"48": "icons/icon-48.png",
			"128": "icons/icon-128.png"
		}
	},
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"content_scripts": [
		{
			"js": [
				"scripts/content.js"
			],
			"matches": [
				"https://www.duolingo.com/leaderboard"
			]
		}
	]
}